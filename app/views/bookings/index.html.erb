<div class="container mt-5">
  <div class="cards">
    <% @bookings.each do |booking| %>
      <%= link_to booking_path(booking), class: "link-to-div" do %>
        <div class="card" style="width: 25rem;">
            <%= cl_image_tag booking.drag.photo.key, class: "card-img" %>
            <div class="card-body">
              <div class="card-body-top">
                <h5 class="card-title"><%= drag.nickname%></h5>
                <h6 class="card-price"><%= drag.hourly_rate %>â‚¬ per hour</h5>
              </div>
              <div>
              <p id="card-text">Accepts events <%= drag.radius %> km around <%= drag.city %></p>
              <p id="card-specialty">Specialty: <%= drag.specialty %></p>
              </div>
            </div>
        </div>
      <% end %>
    <% end %>
</div>
