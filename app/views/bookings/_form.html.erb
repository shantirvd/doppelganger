<div class="container form row new-booking-form">
  <h1 id="form-title" >New booking</h1>
  <%= simple_form_for [drag, booking], class:"justify-content-center",
                       html: {
                        data: {
                          controller: 'flatpickr'
                      }
                    } do |f| %>
  <div class="col-8 mx-auto">
      <%= f.input :booking_date,
                  as: :string,
                  input_html: {
                    data: {
                      flatpickr_target: 'bookingDateInput',
  } } %>
  </div>

  <div class="d-flex col-8 mx-auto justify-content-between">
  <div class="col-5">

    <%= f.input :start_time,
                as: :string,
                input_html: {
                  data: {
                    flatpickr_target: 'startTimeInput',
} } %>
  </div>
  <div class="col-5">

    <%= f.input :end_time,
                as: :string,
                input_html: {
                  data: {
                    flatpickr_target: 'endTimeInput',
} } %>

  </div>
  </div>

  <div class="col-8 mx-auto">

    <%= f.input :location %>

  </div>
    <%= f.submit "Book now", class: "button mx-auto" %>
  <% end %>
</div>
