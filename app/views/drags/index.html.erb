<h1>Find the perfect drag for your event</h1>
<div class="container">
  <div class="cards">
    <% @drags.each do |drag| %>
    <div class="card" style="width: 25rem;">
      <%= cl_image_tag drag.photo.key %>
      <div class="card-body">
      <%= link_to drag_path(drag) %>
        <div class="card-body-top">
          <h5 class="card-title"><%= link_to "#{drag.nickname}", drag_path(drag) %></h5>
          <h6 class="card-price"><%= drag.hourly_rate %>â‚¬ per hour</h5>
        </div>
        <p class="card-text">Accepts events <%= drag.radius %> km around <%= drag.city %></p>
        <p class="card-specialty">Specialty: <%= drag.specialty %></p>
      </div>
    </div>
    <% end %>
</div>
