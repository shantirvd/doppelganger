<div class="container form">
  <h1>New drag</h1>
  <%= simple_form_for [@drag] do |f| %>
    <%= f.input :nickname %>
    <%= f.input :photo, as: :file %>
    <%= f.input :city %>
    <%= f.input :radius %>
    <%= f.input :description %>
    <%= f.input :specialty, :collection => %w[singing dancing comedy doppelganger acrobatics] %>
    <%= f.input :hourly_rate %>
    <%= f.submit "Create your drag profile", class: "button" %>
  <% end %>
</div>
